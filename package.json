{
  "name": "jesusvalera-blog",
  "version": "1.0.0",
  "description": "Personal blog by Jesus Valera Reales",
  "keywords": [
    "blog",
    "zola",
    "tailwindcss"
  ],
  "homepage": "https://jesusvalera.dev/",
  "repository": "https://github.com/JesusValeraDev/JesusValera.dev",
  "license": "MIT",
  "author": "Jesus Valera Reales",
  "scripts": {
    "prebuild-css": "node ./scripts/concat-tailwind.js",
    "build-css": "npm run prebuild-css && tailwindcss -i ./sass/tailwind.entry.css -o ./static/tailwind.css --watch",
    "build-css-dev": "concurrently \"node ./scripts/concat-tailwind.js --watch\" \"tailwindcss -i ./sass/tailwind.entry.css -o ./static/tailwind.css --watch --poll\" --names \"CONCAT,TAILWIND\" --prefix-colors \"yellow,cyan\"",
    "build-css-prod": "npm run prebuild-css && tailwindcss -i ./sass/tailwind.entry.css -o ./static/tailwind.css --minify",
    "dev": "concurrently \"npm run build-css-dev\" \"zola serve\" --names \"CSS,ZOLA\" --prefix-colors \"blue,green\"",
    "lint:css": "stylelint \"sass/**/*.{css,scss}\"",
    "prepare": "husky"
  },
  "lint-staged": {
    "sass/**/*.{css,scss}": [
      "stylelint"
    ]
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "postcss": "^8.5.6",
    "stylelint": "^16.23.1",
    "stylelint-config-standard": "^39.0.0",
    "stylelint-config-tailwindcss": "^1.0.0",
    "tailwindcss": "^3.4.17"
  }
}
